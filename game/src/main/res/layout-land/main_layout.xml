<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment android:name="ru.fivestarter.android.game.activity.ButtonFragment"
              android:id="@+id/button_fragment"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:layout="@layout/button_layout" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
              android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>

    <fragment android:name="ru.fivestarter.android.game.activity.ImageFragment"
              android:id="@+id/image_fragment"
              android:layout_width="391dp"
              android:layout_height="wrap_content"
              tools:layout="@layout/image_layout" android:layout_marginLeft="0dp"
              android:layout_alignParentEnd="true"
              android:layout_alignParentBottom="true"/>

</RelativeLayout>